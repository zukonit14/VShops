<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/edit_user_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="20dp"
            android:fontFamily="@font/lato"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edit_user_mobile_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_user_name_edit_text"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="20dp"
            android:fontFamily="@font/lato"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edit_user_address_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_user_mobile_edit_text"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="20dp"
            android:fontFamily="@font/lato"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edit_user_shop_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_user_address_edit_text"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="20dp"
            android:fontFamily="@font/lato"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/edit_user_location_set_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_user_shop_name_edit_text"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="20dp"
            android:fontFamily="@font/lato"
            android:textSize="24sp" />

        <Button
            android:id="@+id/edit_user_save_button"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_user_location_set_text_view"
            android:layout_marginHorizontal="80dp"
            android:background="@drawable/round_button_background"
            android:fontFamily="@font/roboto_medium"
            android:text="Save"
            android:textSize="24sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_edit_shop_location"
            android:layout_below="@+id/edit_user_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/my_orders_owl_yellow"
            android:elevation="6dp"
            android:src="@drawable/ic_baseline_location_on_24"
            app:fabSize="auto" />


    </RelativeLayout>

</ScrollView>