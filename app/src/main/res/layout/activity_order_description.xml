<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderDescriptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="ORDER DETAILS"
            android:fontFamily="@font/roboto_medium"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/order_id_description_text_view"
            android:layout_width="match_parent"
            android:fontFamily="@font/lato"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:text="OrderId :  HD234LJKB231HG"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/customer_email_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="Customer Email :  zukonit14@gmail.com"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/customer_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="Customer Name :  Kunal Raut"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/customer_address_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="Customer Address :  Flat No B-304, Majestique Imperia, Pune-412308"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/customer_mobile_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="Customer Mobile: 8605157752"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/product_name_order_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lato"
            android:padding="8dp"
            android:text="Product Name :  BOAT Earphones"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/product_price_order_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lato"
            android:padding="8dp"
            android:text="Price :  12,500"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/quantity_order_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:fontFamily="@font/lato"
            android:text="Quantity :  2"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/order_description_accept_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/round_button_background"
                android:paddingHorizontal="16dp"
                android:text="ACCEPT"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/order_description_reject_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/round_button_background"
                android:paddingHorizontal="16dp"
                android:text="REJECT"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>